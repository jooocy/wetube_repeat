doctype html
html(lang="ko")
    head
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        title #{pageTitle} | #{siteName}
       
body
    nav
        ul
            li
                a(href="/") home
            if loggedIn
                li
                    a(href="/videos/upload") upload
                li
                    a(href="/users/logout") logout
            else
                li
                    a(href="/users/login") login
                li
                    a(href="/users/join") join


    header
        h1 #{pageTitle}
    block content 
